<h1>Books</h1>
  <table>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
　　<% @books.each do |book|%>
    <tr align="">
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id),class: "link" %></td>
      <td><%= link_to "Edit", edit_book_path(book.id),class: "link" %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete,class: "link" %></td>
    </tr>
　<% end %>
  </table>

<h2 class='form-title'>New book</h2>
<%= form_for (@book) do |f| %>

  <div class="error_messages">
    <% if @book.errors.any? %>
      <div class="error_explanation">
        <h2 class='error-header'><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
        <ul type="square">
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  </div>
  <div class="form-text">
      <%= f.label :title, "Title" %><br>
      <%= f.text_field :title %>
  </div><br>
  <div class="form-text">
      <%= f.label :body, "Body" %><br>
      <%= f.text_area :body %>
  </div>
      <%= f.submit 'Create Book' %> 
<% end %>

